import java.util.Scanner;

public class Ex2017_03_TicTacToe {
	
	static Scanner scanner;
	
	public static int sumRow(int[][] array, int r) {
		int sum = 0;
		for(int i=0;i<3;i++) sum+=array[r][i];				
		return sum;
	}
	public static int sumCol(int[][] array, int c) {
		int sum = 0;
		for(int i=0;i<3;i++) sum+=array[i][c];				
		return sum;
	}
	public static int sumDiagonal(int[][] array) {
		int sum = 0;
		for(int i=0;i<3;i++) sum+=array[i][i];				
		return sum;
	}
	public static int sumAntiDiagonal(int[][] array) {
		int sum = 0;
		for(int i=0;i<3;i++) sum+=array[i][2-i];				
		return sum;
	}
	
	public static void printValue(int[][] a) {
		System.out.println("------strategic evaluation-------");
		for(int i=0;i<3;i++) {
			for(int j=0;j<3;j++) {
				System.out.print(a[i][j]+" ");
			}	System.out.println("");
		}
	}
	public static void printArray(int[][] a) {
		System.out.println("-------Game Board-----");
		for(int i=0;i<3;i++) {
			for(int j=0;j<3;j++) {
				char C=0;
				if(a[i][j]==0) C='_';
				else if(a[i][j]>0) C='X';
				else if(a[i][j]<0) C='O';
				System.out.print(C+" ");
			}	System.out.println("");
		}
		int winner = whoWon(a);
		switch(winner) {
		case 0: System.out.println("On-Going"); break;
		case 1: System.out.println("Sorry, You lost"); break;
		case -1: System.out.println("Congratulations! You Win!"); break;
		case 10: System.out.println("Draw!"); break;
		default: System.out.println("error"); break;
		}
	}
	
	public static int whoWon(int[][] a) {
		for(int i=0;i<3;i++) {
			if(sumRow(a, i)==3) return 1;
			if(sumCol(a, i)==3) return 1;			
			if(sumRow(a, i)==-3) return -1;
			if(sumCol(a, i)==-3) return -1;			
		}		
		if(sumDiagonal(a)==3) return 1;
		if(sumDiagonal(a)==-3) return -1;
		if(sumAntiDiagonal(a)==3) return 1;
		if(sumAntiDiagonal(a)==-3) return -1;
		int placed=0;
		for(int i=0;i<3;i++) 
			for(int j=0;j<3;j++)
				if(a[i][j]!=0) placed++;
		if(placed==9) return 10;
		return 0;
	}
	
	public static boolean inputOK(int r, int c, int[][] arr) {
	
		if(r < 0 || r>2) return false;
		if(c < 0 || c>2) return false;
		if(arr[r][c]!=0) return false;
		return true;
	}
	
	public static void doComputer(int[][] board) {
		int row, col;
		// 이기는 수를 찾아 두기 
		for(row=0;row<3;row++) {
			for(col=0;col<3;col++) {
				if(inputOK(row,col,board)) {
					board[row][col] = 1;
					if( whoWon(board) == 1) {
						printArray(board);
						return;
					}
					else board[row][col] = 0;
				}
			}
		}
		
		boolean done=false;
		// 남이 이기지 못 하게 하는 수
		for(row=0;row<3 && !done;row++) {
			for(col=0;col<3 && !done;col++) {
				if(inputOK(row,col,board)) {
					board[row][col] = -1;
					if( whoWon(board) == -1) {
						board[row][col] = 1;
						done = true;
					}
					else board[row][col] = 0;
				}
			}
		}
		
		if(!done) {
			// 가장 좋아 보이는 곳 찾기
			int[][] value = new int[3][3];
			for(row=0;row<3;row++) {
				for(col=0;col<3;col++) {
					if(board[row][col]!=0) 
						value[row][col] = -1;
					else {
						int rowValue = 0;
						int colValue = 0;
						for(int i=0;i<3;i++) {
							if(board[row][i]<0) {
								rowValue = 0;
								i=3;
							}
							else {
								rowValue += board[row][i]+1;
							}
						}
						for(int i=0;i<3;i++) {
							if(board[i][col]<0) {
								colValue = 0;
								i=3;
							}
							else {
								colValue += board[i][col]+1;
							}
						}
						int diagValue = 0;
						if(row==1 && col==1) {
							if(board[0][0]!=-1 && board[2][2]!=-1) {
								diagValue += board[0][0] + board[2][2] + 2;
							}
							if(board[0][2]!=-1 && board[2][0]!=-1) {
								diagValue += board[0][0] + board[2][2] + 2;
							}
						}
						if(row==0 && col==0) {
							if(board[1][1]!=-1 && board[2][2]!=-1) {
								diagValue += board[1][1] + board[2][2] + 2;
							}
							
						}
						if(row==2 && col==0) {
							if(board[1][1]!=-1 && board[0][2]!=-1) {
								diagValue += board[1][1] + board[0][2] + 2;
							}
						}
						if(row==0 && col==2) {
							if(board[1][1]!=-1 && board[2][0]!=-1) {
								diagValue += board[1][1] + board[2][0] + 2;
							}
						}
						if(row==2 && col==2) {
							if(board[0][0]!=-1 && board[1][1]!=-1) {
								diagValue += board[0][0] + board[1][1] +2;
							}
						}
						value[row][col] = rowValue + colValue + diagValue;
					}
				}
			}
			
			printValue(value);
			
			int bestRow = 0; int bestCol = 0;
			int bestValue = value[bestRow][bestCol];
			for(row = 0; row<3; row++) {
				for(col = 0; col<3; col++) {
					if(value[row][col]>bestValue) {
						bestRow = row;
						bestCol = col;
						bestValue = value[row][col];
					}
				}
			}
			myArray[bestRow][bestCol] = 1;
		}
	}
	
	public static void doUser(int[][] board) {
		boolean inputWating = true;
		
		while(inputWating) {
			System.out.print("Which element? (row, col): ");
			int row = scanner.nextInt();
			int col = scanner.nextInt();
			if(inputOK(row,col, board)) {
				board[row][col] = -1;
				inputWating = false;
			}
		}
	}
	public static void main(String[] args) {
	
		int[][] myArray ={{0,0,0}, {0,0,0}, {0,0,0}};
		int row, col;
		
		scanner = new Scanner(System.in);
		printArray(myArray);
		
		while(true) {
			
			
			
			
			
			printArray(myArray);
			
			// user
			doUser(myArray);			
			printArray(myArray);
		}

	}

}
