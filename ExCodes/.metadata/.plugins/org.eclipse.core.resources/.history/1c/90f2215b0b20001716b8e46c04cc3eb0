	JLabel Display;
	
	JButton NumBtn[] = new JButton[10];
	String opStr[] = { "+", "-", "x", "/", "=" };
	JButton Operator[] = new JButton[5];			
	
	Ex2017_08_07_Calc() {
		setTitle("My Own Calculator");
		setBounds(10,10, 500,700);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
